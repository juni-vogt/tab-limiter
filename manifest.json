{
	"manifest_version": 3,
	"name": "Tab Limiter",
	"version": "0.3.1",
	"description": "Limit the number of open tabs â€“ in total and per window",

	"author": "Matthias Vogt",
	"homepage_url": "https://github.com/matthias-vogt/tab-limiter",
	"icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"action": {
		"default_icon": {
			"48": "icons/48.png",
			"128": "icons/128.png"
		},
		"default_popup": "options.html",
		"default_title": "Tab Limiter"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage"
	]
}
